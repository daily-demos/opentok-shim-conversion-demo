{
  "env": {
    "browser": true,
    "es2021": true
  },
  "globals": {
    "OT": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": ["error", { "singleQuote": true }],
    "no-use-before-define": ["error", { "functions": false }],
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "no-alert": "off"
  }
}
